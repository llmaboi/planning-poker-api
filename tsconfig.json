{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["mysql2"]
  },
  "baseUrl": ".",
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["./src/*"]
  }
}
